{
  "compilerOptions": {
    "target": "ES5",
    "moduleResolution": "node",
    "jsx": "react",
    // "allowJs": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "baseUrl": ".",
    // "outDir": "/",
    "paths": {
      "@/*": ["./packages/*"]
    },
    // "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "declaration": false,
    "strictNullChecks": true,
    "experimentalDecorators": true, // 启用实验性的ES装饰器
    "resolveJsonModule": true,
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/lib",
    "**/es",
    "**/dist",
    "**/__tests__",
    "**/__test__",
    "**/demo"
  ]
}
